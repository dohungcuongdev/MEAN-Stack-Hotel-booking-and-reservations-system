<% include header.ejs %>
<div class="my-ejs-body">
<div class="container">
    <% if (success_msg){%>
    <h1><%= success_msg %></h1>
    <% } %>
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form" method="POST" action="">
                <h2>Hotel Booking & Reservations System</h2>
                <h3>Change your password!</h3>
                <hr class="colorgraph">
                <% include alert.ejs %>	
                <% if (error != '') {%>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>
                <div class="form-group">
                    <input type="password" name="current_password" id="current_password" class="form-control input-lg" placeholder="Current Password" tabindex="1">
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <input type="password" name="new_password" id="new_password" class="form-control input-lg" placeholder="New Password" tabindex="2">
                    </div>
                </div>
                 <div class="form-group">
                    <div class="form-group">
                        <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-lg" placeholder="Confirm Password" tabindex="3">
                    </div>
                </div>
                <hr class="colorgraph">

                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-success btn-block btn-lg">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input onclick="location.href='/'" value="Cancel" class="btn btn-primary btn-block btn-lg">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
<% include footer.ejs %>
<script type="text/javascript">
window.onload = function () {
    <%  if(success) { %>
        swal({
            title: "Congrats!",
            text: "Your passwod is changed successfully!\nBack to home page now?",
            type: "success",
            showCancelButton: true
        }, function () {
            window.location.href = '/';
        });
        <% } %>
}
</script>